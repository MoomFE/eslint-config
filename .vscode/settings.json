{
  // 启用 ESlint 的扁平配置支持
  "eslint.experimental.useFlatConfig": true,

  // 禁用默认格式化程序, 使用 ESlint 代替
  "prettier.enable": false,
  "editor.formatOnSave": false,

  // 自动修复
  "editor.codeActionsOnSave": {
    "source.fixAll.eslint": "explicit",
    "source.organizeImports": "never"
  },

  // 为所有支持的语言启用 ESlint
  "eslint.validate": [
    "javascript",
    "javascriptreact",
    "typescript",
    "typescriptreact",
    "vue",
    "html",
    "markdown",
    "json",
    "jsonc",
    "yaml",
    "toml",
    "gql",
    "graphql"
  ],

  "editor.tabSize": 2,

  "files.exclude": {
    "*.code-workspace": true,
    "node_modules": true
  }
}
